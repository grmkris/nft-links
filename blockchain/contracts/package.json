{
  "name": "hardhat-project",
  "scripts": {
    "generete-types": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat compile",
    "compile:": "npx hardhat compile",

    "deploy:local": "hardhat deploy --network localhost",
    "deploy:local:tag": "sh -c 'hardhat deploy --network localhost --tags ${0}'",
    "deploy:local:tag:reset": "sh -c 'hardhat deploy --network localhost --tags ${0} --reset'",
    "deploy:rinkeby": "hardhat deploy --network rinkeby",
    "deploy:rinkeby:reset": "hardhat deploy --network rinkeby --reset",
    "deploy:rinkeby:tag": "sh -c 'hardhat deploy --network rinkeby --tags ${0}'",
    "deploy:rinkeby:tag:reset": "sh -c 'hardhat deploy --network rinkeby --tags ${0} --reset'",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "deploy:mainnet:reset": "hardhat deploy --network mainnet --reset",
    "deploy:mainnet:tag": "sh -c 'hardhat deploy --network mainnet --tags ${0}'",
    "deploy:mainnet:tag:reset": "sh -c 'hardhat deploy --network mainnet --tags ${0} --reset'",
    "deploy:mumbai": "hardhat deploy --network mumbai",
    "deploy:mumbai:reset": "hardhat deploy --network mumbai --reset",
    "deploy:mumbai:tag": "sh -c 'hardhat deploy --network mumbai --tags ${0}'",
    "deploy:mumbai:tag:reset": "sh -c 'hardhat deploy --network mumbai --tags ${0} --reset'"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.47",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.2",
    "hardhat": "^2.9.3",
    "hardhat-deploy": "^0.10.6",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.5.0"
  }
}
